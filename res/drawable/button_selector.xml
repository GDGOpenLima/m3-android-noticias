<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
        	<gradient android:startColor="#A7DE3F" 
        	    android:centerColor="#36393D" 
        	    android:endColor="#A7DE3F" android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#00406F" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
   
       <item>
        <shape>
            <gradient
      android:startColor="#00406F"
      android:centerColor="#0068AC"
      android:endColor="#00406F"
       android:centerX="50%"
       android:centerY="110%"
      android:angle="90"
      android:type="sweep"/>
            <stroke
                android:width="1dp"
                android:color="#00406F" />
            <corners
                android:radius="4dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
    

</selector>